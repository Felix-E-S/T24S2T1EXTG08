<Page
    x:Class="Calculator.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<StackPanel>
			<Image x:Name="Logo" Source="/Assets/StoreLogo.png" Height="50" Width="50" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10"/>
			<TextBlock x:Name="titleMenu" FontSize="90" Text="Universal Calculator" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"></TextBlock>
			<StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20">
				<Button x:Name="maths" Content="Maths Calculator" FontSize="60" Margin="10" Click="mathsCalculator_Click" Width="600"></Button>
				<Button x:Name="mortgage" Content="Mortgage Calculator" FontSize="60" Margin="10" Click="mortgageCalculator_Click" Width="600"></Button>
				<Button x:Name="currency" Content="Currency Converter" FontSize="60" Margin="10" Click="currencyConverter_Click" Width="600"></Button>
				<Button x:Name="exit" Content="Exit" FontSize="60" Margin="10" Click="exit_Click" Width="600"></Button>
			</StackPanel>
		</StackPanel>

	</Grid>
</Page>
